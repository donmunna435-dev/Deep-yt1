# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# YouTube API Credentials from Google Cloud Console
YOUTUBE_CLIENT_ID=your_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REDIRECT_URI=https://your-app-name.onrender.com/callback

# Admin Telegram User IDs (comma separated)
ADMIN_IDS=123456789

# For Render PostgreSQL (optional)
# DATABASE_URL=postgresql://...

# Webhook URL for production (use your Render app URL)
WEBHOOK_URL=https://your-app-name.onrender.com

# Max file size in bytes (default: 2GB)
MAX_FILE_SIZE=2147483648

# Host and Port (Render will set PORT)
HOST=0.0.0.0
PORT=10000

# Set to production
ENVIRONMENT=production